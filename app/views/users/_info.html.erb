<!--部分テンプレート'users/show.html'-->
<% if user == current_user %>
  <div class="row">
    <div class="col-4">
      <%= attachment_image_tag user, :image, :fill, 100, 100, fallback: "no_image_square.jpg", size: '200x200' %>
    </div>
    <div class="col">
      <div class="content row">
        <table class="table">
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= user.last_name %><%= user.first_name %></td>
            </tr>
            <tr>
              <td>ニックネーム(表示名)</td>
              <td><%= user.nickname %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= user.email %></td>
            </tr>
            <tr>
              <td>紹介文</td>
              <td><%= user.introduction %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="row text-center">
    <%= attachment_image_tag user, :image, :fill, 100, 100, fallback: "no_image_square.jpg", size: '200x200' %>
  </div>
  <div class="content row mt-2">
    <table class="table">
      <tbody>
        <tr>
          <td>ニックネーム</td>
          <td><%= user.nickname %></td>
        </tr>
        <tr>
          <td>紹介文</td>
          <td><%= user.introduction %></td>
        </tr>
      </tbody>
    </table>
  </div>
<% end %>