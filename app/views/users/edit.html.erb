<div class="container">
  <h2 class="row mt-4 mb-5">マイページ編集</h2>

  <%= form_with model:@user, local:true do |f| %>

    <div class="row">
      <div class="col-md-3">
        <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image_square.jpg", size: '100x100' %>
      </div>
      <div class="col-md-7"><%= f.attachment_field :image, placeholder: "プロフィール画像" %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :last_kname, "名字" %></div>
      <div class="col-md-7"><%= f.text_field :last_name, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :first_name, "名前" %></div>
      <div class="col-md-7"><%= f.text_field :first_name, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :nickname, "ニックネーム(表示名)" %></div>
      <div class="col-md-7"><%= f.text_field :nickname, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-md-7"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :introduction, "紹介文" %></div>
      <div class="col-md-7"><%= f.text_field :introduction, autofocus: true %></div>
    </div>

    <div class="actions">
      <%= f.submit "保存する" %>
    </div>
  <% end %>
</div>