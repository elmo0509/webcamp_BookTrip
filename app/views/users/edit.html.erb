<div class="container">
  <!--バリデーションメッセージ-->
  <div class="row">
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <% @user.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
  <h2 class="row mt-4 mb-5 title">マイページ編集</h2>

  <%= form_with model:@user, local:true do |f| %>

    <div class="row">
      <div class="col-md-3"><%= f.label :image, "プロフィール画像" %></div>
      <div class="col-md-7"><%= f.attachment_field :image, placeholder: "プロフィール画像" %></div>
    </div></br>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :last_kname, "名字" %><span class="mgr-10 must">(必須)</span></div>
      <div class="col-md-7"><%= f.text_field :last_name, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :first_name, "名前" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.text_field :first_name, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :nickname, "ニックネーム(表示名)" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.text_field :nickname, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :email, "メールアドレス" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 50 %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :introduction, "紹介文" %></div>
      <div class="col-md-7"><%= f.text_area :introduction, autofocus: true, size: "50x4" %></div>
    </div>

    <div class="actions">
      <%= f.submit "保存する" %>
    </div>
  <% end %>
</div>