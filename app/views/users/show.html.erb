<div class="container">
  <% if @user == current_user %>
    <div class="row mt-4 mb-5">
      <h2 class="col title"><%= @user.nickname %>さんのマイページ</h2>
      <div class="col"><%= link_to '編集する', edit_user_path(@user), class: "btn btn-info" %></div>
    </div>
    <%= render 'info', user: @user %>
    <div class="mt-5">
      <h4 class="title">スポット紹介</h4>
      <%= render 'introductions/list', introductions: @introductions %>
    </div>

  <% else %>
    <h2 class="row mt-4 mb-5 title"><%= @user.nickname %>さんのページ</h2>
    <div class="row">
      <div class="col-4">
        <%= render 'info', user: @user %>
      </div>
      <div class="col-8">
        <h4 class="title">スポット紹介</h4>
        <%= render 'introductions/list', introductions: @introductions %>
      </div>
    </div>
  <% end %>
</div>