<div class="container">
  <h2 class="row mt-4 mb-5">スポット紹介</h2>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>スポット名</th>
        <th>場所</th>
        <th>いいね</th>
        <th>コメント件数</th>
      </tr>
    </thead>

    <tbody>
      <% @introductions.each do |introduction| %>
      <tr>
        <td>
          <%= link_to user_path(introduction.user_id) do  %>
          <%= attachment_image_tag introduction.user, :image, :fill, 40, 40, fallback: "no_image_square.jpg", size: '60x60' %>
          <% end %>
        </td>
        <td>
          <%= link_to introduction_path(introduction.id) do %>
          <%= introduction.place %>
          <% end %>
          </td>
        <td><%= introduction.address_prefecture %></td>

        <% if introduction.favorited_by?(current_user) %>
          <td>
            <%= link_to introduction_favorites_path(introduction), method: :delete do %>
              ♥<%= introduction.favorites.count %>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to introduction_favorites_path(introduction), method: :post do %>
              ♡<%= introduction.favorites.count %>
            <% end %>
          </td>
        <% end %>
        
        <td><%= introduction.introduction_comments.count %>件</td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>