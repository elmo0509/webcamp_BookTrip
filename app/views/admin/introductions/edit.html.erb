<div class="container">
  <!--バリデーションメッセージ-->
  <div class="row">
    <% if @introduction.errors.any? %>
      <%= @introduction.errors.count %>件のエラーが発生しました
      <% @introduction.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    <% end %>
  </div>
  <h2 class="row mt-4 mb-5"><%= @introduction.user.last_name %><%= @introduction.user.first_name %>さんの投稿編集画面</h2>
  <%= form_with model:@introduction, url:admin_introduction_path, local:true do |f| %>

    <div class="row">
      <div class="col-md-3"><%= f.label :image, "スポット画像" %></div>
      <div class="col-md-7"><%= f.attachment_field :image, placeholder: "スポット画像" %></div>
    </div></br>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :place, "スポット名" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.text_field :place, autofocus: true, size: 50 %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :author, "作者名" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.text_field :author, autofocus: true, size: 50 %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :title, "作品名" %></div>
      <div class="col-md-7"><%= f.text_field :title, autofocus: true, size: 50 %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :address_prefecture, "住所(都道府県)" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.select :address_prefecture, Introduction.address_prefectures.keys, {} %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :address_after_prefecture, "住所(都道府県以降)" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.text_field :address_after_prefecture, autofocus: true, size: 50 %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :address_building_name, "建物名" %></div>
      <div class="col-md-7"><%= f.text_field :address_building_name, autofocus: true, size: 50 %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :introduction, "紹介文" %><span class="mgr-10 must">(必須)</div>
      <div class="col-md-7"><%= f.text_area :introduction, autofocus: true, size:"80x6" %></div>
    </div>

    <div class="actions">
      <%= f.submit "変更を保存する" %>
    </div>
  <% end %>
</div>
