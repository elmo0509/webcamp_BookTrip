<div class="container">
  <div class="row">
    <h2>Users</h2>

    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>nickname</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :image, :fill, 40, 40, format:'jpeg', fallback: "no_image_square.jpg", size: '60x60' %>
          </td>
          <td>
            <%= user.nickname %>
          </td>
          <td><%= link_to "Show", admin_user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>