<div class="container">
  <div class="row mt-4">
    <h2 class="mb-3">ユーザ一覧</h2>

    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>氏名</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :image, :fill, 40, 40, format:'jpeg', fallback: "no_image_square.jpg", size: '60x60' %></td>
          <td><%= user.last_name %><%= user.first_name %></td>
          <td><%= user.nickname %></td>
          <td><%= user.email %></td>
          <td><%= link_to "詳細", admin_user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>