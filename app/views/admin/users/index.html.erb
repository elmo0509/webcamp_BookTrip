<div class="container">
  <h2 class="row mt-4 mb-3">ユーザ一覧</h2>

  <div class="content row">
    <table class="table table-hover table-striped table_admin">
      <thead>
        <tr>
          <th>ID</th>
          <th>image</th>
          <th>氏名</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= attachment_image_tag user, :image, :fill, 40, 40, format:'jpeg', fallback: "no_image_square.jpg", size: '60x60' %></td>
          <td>
            <%= link_to admin_user_path(user.id) do %>
            <%= user.last_name %><%= user.first_name %>
            <% end %>
          </td>
          <td><%= user.nickname %></td>
          <td><%= user.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>